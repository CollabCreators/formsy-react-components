{
  "compilerOptions": {
    "outDir": "./dist-esm/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es5",
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
